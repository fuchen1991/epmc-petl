smg

const int dir_e = 0;
const int dir_n = 1;
const int dir_w = 2;
const int dir_s = 3;

const int size;

const int min_x = 0;
const int min_y = 0;
const int max_x = size-1;
const int max_y = size-1;

const int init_x1 = 0;
const int init_y1 = 0;

const int init_x2 = max_x;
const int init_y2 = max_y;

player player1
  [robot1]
endplayer

player player2
  [robot2]
endplayer

module robot1
  direction1 : [0..3] init dir_e;
  x1 : [min_x..max_x] init init_x1;
  y1 : [min_y..max_y] init init_y1;

  [robot1] true -> (direction1'=dir_e);
  [robot1] true -> (direction1'=dir_n);
  [robot1] true -> (direction1'=dir_w);
  [robot1] true -> (direction1'=dir_s);

  [robot1] direction1=dir_e -> (x1'=min(max_x,x1+1, x1+1=x2&y1=y2 ? x1 : max_x));
  [robot1] direction1=dir_n -> (y1'=min(max_y,y1+1, x1=x2&y1+1=y2 ? y1 : max_y));
  [robot1] direction1=dir_w -> (x1'=max(min_x,x1-1, x1-1=x2&y1=y2 ? x1 : min_x));
  [robot1] direction1=dir_s -> (y1'=max(min_y,y1-1, x1=x2&y1-1=y2 ? y1 : min_y));

  [robot1] direction1=dir_e -> 0.5 : (x1'=min(max_x, x1+1, x1+1=x2&y1=y2 ? x1 : max_x))
                             + 0.5 : (x1'=min(max_x, x1+2, x1+1=x2&y1=y2 ? x1 : max_x, x1+2=x2&y1=y2 ? x1+1 : max_x));
  [robot1] direction1=dir_n -> 0.5 : (y1'=min(max_y, y1+1, x1=x2&y1+1=y2 ? y1 : max_y))
                             + 0.5 : (y1'=min(max_y, y1+2, x1=x2&y1+1=y2 ? y1 : max_y, x1=x2&y1+2=y2 ? y1+1 : max_y));
  [robot1] direction1=dir_w -> 0.5 : (x1'=max(min_x, x1-1, x1-1=x2&y1=y2 ? x1 : min_x))
                             + 0.5 : (x1'=max(min_x, x1-2, x1-1=x2&y1=y2 ? x1 : min_x, x1-2=x2&y1=y2 ? x1-1 : min_x));
  [robot1] direction1=dir_s -> 0.5 : (y1'=max(min_y, y1-1, x1=x2&y1-1=y2 ? y1 : min_y))
                             + 0.5 : (y1'=max(min_y, y1-2, x1=x2&y1-1=y2 ? y1 : min_y, x1=x2&y1-2=y2 ? y1-1 : min_y));
endmodule

module robot2 = robot1 [
  init_x1=init_x2,
  init_y1=init_y2,
  direction1=direction2,
  x1=x2,
  y1=y2,
  robot1=robot2,
  x2=x1,
  y2=y1
] endmodule

module scheduler
  c : [1..2] init 1;

  [robot1] c=1 -> (c'=2);
  [robot2] c=2 -> (c'=1);
endmodule

label "z1" = (x1=min_x) & (y1=max_y);
label "z2" = (x1=max_x) & (y1=max_y);
label "z3" = (x1=min_x) & (y1=min_y);
label "z4" = (x1=max_x) & (y1=min_y);
